<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head %>
</head>
<body>
<% include ../partials/nav %>

<div class="container-fluid">
    <div class="container post post-edit">

        <div class="container" id="review_title">
            <span>후기 수정</span>
        </div>

        <form class="post-form form-horizontal" action="/posts/<%= post._id %>?_method=put" method="post">
            <div class="contentBox">
                <h3 class="contentBoxTop">후기 수정</h3>
                <fieldset>
                    <div class="form-group <%= (errors.title) ? 'has-error' : '' %>">
                        <label for="title" class="col-sm-2 control-label">제목</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" id="title" name="title" value="<%= post.title %>">
                            <% if(errors.title){ %>
                            <span class="help-block"><%= errors.title.message %></span>
                            <% } %>
                        </div>
                    </div>
                    <div class="form-group <%= (errors.body) ? 'has-error' : '' %>">
                        <label for="body" class="col-sm-2 control-label">내용</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" id="body" name="body" rows="5"><%= post.body %></textarea>
                            <% if(errors.body){ %>
                            <span class="help-block"><%= errors.body.message %></span>
                            <% } %>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="buttons">
                <button type="submit" class="btn btn-success">수정</button>
            </div>
            <div class="buttons">
                <a class="btn btn-warning" href="/posts">뒤로가기</a>
            </div>
            <% if(errors.unhandled){ %>
            <div class="alert alert-danger">
                <%= errors.unhandled %>
            </div>
            <% } %>
        </form>
    </div>  <!-- container end -->
    <% include ../partials/footer %>
</div>

</body>
</html>
