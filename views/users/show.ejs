<!DOCTYPE html>
<html>
<head>
    <% include ../partials/head %>
</head>
<body>
<% include ../partials/nav %>

<div class="container-fluid">
    <div class="container user user-show">

        <div class="container" id="review_title">
            <span>내 계정</span>
        </div>

        <form class="user-form form-horizontal" action="/users" method="post">
            <div class="contentBox">
                <h3 class="contentBoxTop"><%= user.userid %></h3>
                <fieldset disabled>
                    <div class="form-group">
                        <label for="name" class="col-sm-3">이름</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" id="name" name="name" value="<%= user.name %>">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-sm-3">이메일</label>
                        <div class="col-sm-9">
                            <input class="form-control" type="text" id="email" name="email" value="<%= user.email %>">
                        </div>
                    </div>
                </fieldset>
            </div>
        </form>
        <div class="buttons">
            <a class="btn btn-warning" href="/">뒤로가기</a>
            <% if(isAuthenticated && currentUser.id == user.id){ %>
            <a class="btn btn-primary" href="/users/<%= user.userid %>/edit">계정 수정</a>
            <% } %>
        </div>
    </div> <!-- container end -->
    <% include ../partials/footer %>

</div>
</body>
</html>
